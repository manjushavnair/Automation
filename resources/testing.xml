<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Automation" verbose="2"  >
    <!-- change the below two vvlaues -->
    <!--
    How to run
    java -cp "C:\Software\selenium\selenium-java-2.53.1.jar;C:\Software\selenium\realReport_1.0.jar;C:\Projects\Automation\Automation\target\Automation-0.0.1-SNAPSHOT-jar-with-dependencies.jar;C:\Software\selenium\testng-6.9.10.jar;C:\Software\selenium\selenium-server-standalone-2.53.1.jar" org.testng.TestNG testing.xml

    -->
    <parameter name="appURL" value="https://localhost:9000/"/>
    <parameter name="browserType" value="chrome"/>

    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2" />
        <listener class-name="org.testng.reporters.SuiteHTMLReporter" />
        <listener class-name="org.testng.reporters.TestHTMLReporter" />
        <listener class-name=" com.automation.ui.base.common.testnglisteners.InvokeMethodAdapter"/>
       <!-- <listener class-name="report.realtime.listener.RealTimeTestResultListener" /> -->
    </listeners>

    <test name="Automation"  preserve-order="true">

        <groups>

            <define name="other">
                <include name="base"/>
                <include name="invalidcase"/>

            </define>
            <define name="runing">

                <include name="validcase"/>
            </define>

            <run>
                <include name="running" />
                <exclude name="other" />
            </run>
        </groups>


        <packages>

            <package name="com.automation.ui.connected.testcases.login" />
            <package name="com.automation.ui.connected.testcases.home" />


        </packages>

        <classes>
          <class name="com.automation.ui.connected.testcases.login.LoginTest"  >
                <methods>
                    <include name="verifyValidLogin"/>
                </methods>
            </class>
            <class name="com.automation.ui.connected.testcases.home.HomePageTest"  >

            <methods>
                <include name="launchHomePage"/>
            </methods>
        </class>
        </classes>
    </test>

</suite>
